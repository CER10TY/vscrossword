{
	"name": "vscrossword",
	"displayName": "VSCrossword",
	"description": "Crossword puzzles in VS",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.36.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:crossword.show"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "crossword.show",
				"title": "Start a new crossword session",
				"category": "Crosswords"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"build-css": "node-sass-chokidar public/ -o public/",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.36.0",
		"css-loader": "^3.1.0",
		"glob": "^7.1.4",
		"mocha": "^10.2.0",
		"node-sass": "^4.12.0",
		"sass-loader": "^7.1.0",
		"style-loader": "^0.23.1",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vscode-test": "^1.0.2"
	},
	"dependencies": {
		"node-sass-chokidar": "^1.3.5"
	}
}
